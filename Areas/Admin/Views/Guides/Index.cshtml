@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<style>
    img{
        border-radius:50%;
    }
</style>

<h1>Rehber Listesi</h1>

<table class="table table-bordered">
    <a href="/Admin/Guides/AddGuide" class="btn btn-outline-primary">Yeni Rehber Ekle</a>
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Durum Değiştir</th>
        <th>Düzenle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.Image" height="50" with="50" /></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            
                @{
                    if (item.Status == true)
                    {
                        <td class="aktif-item">•Aktif</td>
                    }
                    else
                    {
                        <td class="pasif-item">•Pasif</td>
                    }
                }
            
                @{
                    if (item.Status==true)
                    {
                    <td><a href="/Admin/Guides/ChangeTofalse/@item.GuideId" class="btn btn-outline-warning">Pasif Yap</a></td>
                    }
                    else
                    {
                    <td><a href="/Admin/Guides/ChangeToTrue/@item.GuideId" class="btn btn-outline-info">Aktif Yap</a></td>
                    }                  
                }
            <td><a href="/Admin/Guides/EditGuide/" class="btn btn-outline-success">Düzenle</a></td>

            <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
        </tr>
    }
</table>

<style>
    .item-container {
        display: flex;
        align-items: center;
    }

    .aktif-item{
        color:deepskyblue
    }
    .pasif-item {
        color: orange;
    }
</style>