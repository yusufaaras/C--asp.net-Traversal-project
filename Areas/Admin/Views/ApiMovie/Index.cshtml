@using TraversalCoreProject.Areas.Admin.Models;
@model List<ApiMovieViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Api IMDB Top 100 Film Listesi</h1>
<br />

<table class="table table-sptriped">
    <tr>
        <th>#</th>
        <th>Film Adı</th>
        <th>IMDB Puanı</th>
        <th>Yapım Yılı</th>
        <th>Fragmanı</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.rank</td>
            <td>@item.title</td>
            <td>@item.rating</td>
            <td>@item.year</td>
            <td><a href="#" class="btn btn-outline-dark">Fragman</a></td>
        </tr>
    }
</table>
